<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <!--方形头像-->
    <ImageView
        android:id="@+id/book_photo"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:layout_centerVertical="true"/>
    <!--<TextView-->
        <!--android:layout_margin="1dp"-->
        <!--android:id="@+id/book_id"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignTop="@+id/book_photo"-->
        <!--android:layout_toRightOf="@+id/book_photo"-->
        <!--/>-->
    <TextView
        android:layout_margin="1dp"
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_photo"/>
    <TextView
        android:layout_margin="1dp"
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/book_name"
        android:layout_marginLeft="30dp"
        />
    <!--<TextView-->
        <!--android:layout_margin="1dp"-->
        <!--android:id="@+id/page_num"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <TextView
        android:layout_margin="1dp"
        android:id="@+id/publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name"
        android:layout_toRightOf="@id/book_photo"
        android:textSize="18dp"/>
    <TextView
        android:layout_margin="1dp"
        android:id="@+id/press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/publish_date"
        android:layout_alignLeft="@id/publish_date"
        android:textSize="18dp"
        />
</RelativeLayout>